import PostsLoop from "../components/posts-loop.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Mon Blog - Codelsior">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="Mon Blog"
      description="Découvrez mes réflexions générales sur la technologie dans mes derniers articles ; un mélange d'introspection et d'innovation. Gardez un œil sur les nouvelles idées et mises à jour !"
    />

